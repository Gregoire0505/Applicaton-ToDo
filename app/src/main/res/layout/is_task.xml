<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:background="@drawable/bgistask">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //Titre de la tâche
        <TextView
            android:id="@+id/title_task"
            android:layout_marginTop="15dp"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="#393840"
            android:textStyle="bold"
            android:text="Finir la première étape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        //Statut de la tâche
        <TextView
            android:id="@+id/statut_task"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="#2A88CA"
            android:text="In Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        //Note sur la tâche (#6E6B6B)
        <TextView
            android:id="@+id/note_task"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="14dp"
            android:textColor="#6E6B6B"
            android:text="Note concernant cette première tâche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:textAlignment="center"
        android:layout_height="wrap_content">

        //Date de la tâche
        <TextView
            android:id="@+id/date_task"
            android:textSize="20dp"
            android:textColor="#F32A2C"
            android:layout_marginTop="8dp"
            android:text="Tomorrow"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>